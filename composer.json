{
    "name": "extended-type-system/type-reflection",
    "description": "PHP Extended Type System â€¢ Type Reflection",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov.valentin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "extended-type-system/type": "^0.2@dev",
        "nikic/php-parser": "^4.15",
        "phpstan/phpdoc-parser": "^1.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.31",
        "friendsofphp/php-cs-fixer": "^3.17.0",
        "infection/infection": "^0.27.0",
        "phpunit/phpunit": "^10.1.3",
        "phpyh/coding-standard": "^2.2.0",
        "psalm/plugin-phpunit": "^0.18.4",
        "symfony/var-dumper": "^6.3.0",
        "vimeo/psalm": "^5.12.0"
    },
    "autoload": {
        "psr-4": {
            "ExtendedTypeSystem\\Reflection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExtendedTypeSystem\\Reflection\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true
        },
        "sort-packages": true
    },
    "scripts": {
        "cleanup": "find var ! -path var ! -path var/.gitignore -exec rm -rf {} +",
        "fixcs": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix -v",
        "infection": "infection --threads=max --show-mutations",
        "psalm": "psalm --show-info=true --no-diff",
        "test": "phpunit"
    }
}
